<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:layout_width="match_parent"
    andriod:layout_height="match_parent"
    andriod:orientation="vertical">

    <LinearLayout
        andriod:layout_width="match_parent"
        andriod:layout_height="wrap_content"
        andriod:gravity="center"
        andriod:orientation="horizontal">

        <Button
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:layout_weight="1"
            andriod:text="@string/normal"
            andriod:onClick="mapButtonClick"/>
        <Button
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:layout_weight="1"
            andriod:text="@string/satellite"
            andriod:onClick="satelliteButtonClick"/>
        <Button
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:layout_weight="1"
            andriod:text="@string/hybrid"
            andriod:onClick="hybridButtonClick"/>

    </LinearLayout>


<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" />

</LinearLayout>